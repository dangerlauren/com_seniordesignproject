<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2.0" method="upgrade">
 
	<name>Senior Design Project</name>
	<!-- The following elements are optional and free of formatting constraints -->
	<creationDate>March 2016</creationDate>
	<author>Lauren Grant</author>
	<authorEmail>lgrant@utexas.edu</authorEmail>
	<authorUrl>http://www.engr.utexas.edu</authorUrl>
	<copyright>2016 Cockrell School of Engineering</copyright>
	<license>GNU/GPL</license>
	<!--  The version string is recorded in the components table -->
	<version>0.0.8</version>
	<!-- The description is optional and defaults to the name -->
	<description>This component manages senior design projects</description>
 
	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>seniordesignproject.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
	</files>

	<languages folder="site/language">
		<language tag="en-GB">en-GB/en-GB.com_seniordesignproject.ini</language>
    </languages>
 
	<administration>
		<!-- Administration Menu Section -->
		<menu link='index.php?option=com_seniordesignproject'>Senior Design Project</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>seniordesignproject.php</filename>
			<filename>controller.php</filename>
			<!-- tables files section -->
			<folder>tables</folder>
			<!-- models files section -->
			<folder>models</folder>
			<!-- views files section -->
			<folder>views</folder>
		</files>
		<languages folder="admin/language">
        	<language tag="en-GB">en-GB/en-GB.com_seniordesignproject.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_seniordesignproject.sys.ini</language>
		</languages>
	</administration>
 
</extension>